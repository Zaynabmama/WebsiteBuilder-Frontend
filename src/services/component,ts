const api = 'http://localhost:5000';

export async function saveComponents(projectId: string, pageId: string, components: any[], token: string) {
  const response = await fetch(`${api}/components/${projectId}/${pageId}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${token}`
    },
    body: JSON.stringify(components)
  });
  if (!response.ok) {
    throw new Error('Failed to save components');
  }
  return response.json();
}

export async function previewPage(projectId: string, pageId: string, token: string) {
  const response = await fetch(`${api}/project/${projectId}/page/${pageId}/preview`, {
    method: 'GET',
    headers: {
      'Authorization': `Bearer ${token}`
    }
  });
  if (!response.ok) {
    throw new Error('Failed to fetch the preview URL');
  }
  return response.json();
}
